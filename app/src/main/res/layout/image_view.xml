<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:id="@+id/viewerPage"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="Date: 11/11/1111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/dateLabel"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:gravity="center_horizontal|center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:textStyle="bold"/>
    <ImageView
            android:layout_height="0dp"
            android:id="@+id/photoContainer"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintTop_toBottomOf="@+id/imageTitleName" android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/buttonPrevious"
            app:layout_constraintEnd_toStartOf="@+id/buttonNext"
            android:layout_width="0dp"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            android:scaleType="fitCenter" app:layout_constraintHorizontal_bias=".5"
    />
    <TextView
            android:text="Image Title Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/imageTitleName"
            app:layout_constraintTop_toBottomOf="@+id/dateLabel"
            android:layout_marginTop="24dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center_horizontal|center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textStyle="bold"/>
    <TextView
            android:text="StoryWBDKJYWDYWYDGWYGDYWGKJDYAGYGODGWYGDYWDGYJWDGYWGDYYWGDYWDAYDJWKJDYSGDYAWDYGYSGYDGWYKDGYSGDYWGAYSDGWYAGSYGDKJWYDA"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textStory"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:gravity="center_horizontal|center_vertical"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/photoContainer" android:layout_marginTop="24dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <Button
            android:text="@string/prevBtn"
            android:layout_width="55dp"
            android:layout_height="55dp" android:id="@+id/buttonPrevious"
            app:layout_constraintBottom_toBottomOf="@+id/photoContainer"
            app:layout_constraintTop_toTopOf="@+id/photoContainer" app:layout_constraintStart_toStartOf="parent"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginStart="8dp" android:autoSizeTextType="none"
    />
    <Button
            android:text="@string/nextBtn"
            android:layout_width="55dp"
            android:layout_height="55dp" android:id="@+id/buttonNext"
            app:layout_constraintTop_toTopOf="@+id/buttonPrevious"
            app:layout_constraintBottom_toBottomOf="@+id/buttonPrevious" app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_horizontal|center_vertical"
            android:autoSizeTextType="none" android:layout_marginEnd="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>